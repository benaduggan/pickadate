<% @title = "Invitations" %>

<h1>You've been invited to the following dates!</h1>

<div class='row'>
	<% if !@dates.nil? %>
		<table class="table table-hover">
			<thead>
				<th>Title</th>
				<th>Floor</th>
				<th>Location</th>
				<th>Starts on</th>
				<th>Your response?</th>
			</thead>
			<% @dates.each do |date| %>
				<tr class='userRow'>
					<td><%= link_to date.title, date %></td>
					<td><%=date.floor.name%>, <%=date.floor.dorm.name%></td>
					<td><%=date.location%></td>
					<td><%=date.time.strftime("%B %e at %l:%M%p") %></td>
					<td>
						<button class="btn btn-default btn-xs" id="iyes" value=<%=date.id%> >Yes! Let's do this!</button>
							<button class="btn btn-default btn-xs" id="ino" value=<%=date.id%> >Eh... No.</button>
					</td>
				</tr>
			<% end %>
		</table>
	<% end %>  
</div> 