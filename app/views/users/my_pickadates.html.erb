<% @title = "All Dates" %>

<h1>Your Dates</h1>
<h3>These are the dates you are related to!</h3>

<% if !@dates.nil? %>
<table class="users">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Floor</th>
    <th>Location</th>
    <th>Starts on</th>
  </thead>
  <% @dates.each do |date| %>
    <tr class='userRow'>
      <td width='80px'>
        Picture Placeholder
      </td>
      
      <td><%= link_to date.title, date %></td>
      
      <td><%=date.floor.name%> <%=date.floor.dorm.name%></td>
      <td><%=date.location%></td>
      <td><%=date.time.strftime("%B %e at %l:%M%p") %></td>
      
      <a href=<%= user_path(date) %></a>
  <% end %>
</table>
<% end %>   


<% if current_user.pa? %>
<div class="row" id='row'><%= button_to "Create a Date", new_pickadate_path, :class => "btn btn-primary", :method => :get, :id => "pickadateeditsubmit" %></div>
<% end %>







