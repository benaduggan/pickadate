<% @title = "All Dates" %>

<h1>All Dates</h1>



<ul class="dates">
  <% @pickadates.each do |date| %>
    <li>
      <a href=<%= user_path(date) %></a>
      <%= link_to date.title, date %> <% if current_user.admin? %> | 
      <%= link_to "Delete", pickadate_path(date), method: :delete, data: { confirm: "Are you sure you want to delete #{date.title}?" } %><% end %>
    </li>
  <% end %>
</ul>

<% if current_user.pa? %>

<%= button_to "Create a Date", new_pickadate_path, :class => "btn btn-primary", :method => :get %>

<% end %>