<% if @date.errors.any? %>
    <div class="alert alert-danger"> 
      <p>The form contains <%= pluralize(@date.errors.count, "error") %>.</p>
    </div>
    <ul>
      <% @date.errors.full_messages.each do |message| %>
      <li class="text-danger"> <%= message %> </li>
      <% end %>
    </ul>
<% end %>

