<% if @date.errors.any? %>
    <div class="alert alert-danger"> 
      <p>The form contains <%= pluralize(@date.errors.count, "error") %>.</p>
    </div>
    <ul>
      <% @date.errors.full_messages.each do |message| %>
      <li class="text-danger"> <%= message %> </li>
      <% end %>
    </ul>
<% end %>

<div class="col-lg-4 col-lg-4-offset well" id="pickadateeditformwells">
    <div class='form-group'>
      <%= f.label :title, "Title*" %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :location, "Location*" %>
      <%= f.text_field :location, class: 'form-control' %>
    </div>

    <div class='form-group' id="PickadateDatetimeSelect">
      <%= f.label :time, "Time of Event*" %>
      <%= f.datetime_select :time, class: 'form-control'%>
    </div>

    <div class='form-group'>
      <%= f.label :description, "Description*" %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  
    <div class='form-group'>
      <%= f.label :cost, "cost* (This is only seen by floor memebers!)" %>
      <%= f.text_field :cost, class: 'form-control' %>
    </div>
</div>